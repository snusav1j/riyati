- if current_user.present?
  .panel-block
    = link_to root_path, class: 'hide-on-mobile' do
      %span.panel-logo.hide-on-mobile R
    .vertical-separator.hide-on-mobile
    %a#show-sidebar.btn.btn-sm.btn-dark{:href => "#"}
      = fa_icon :bars
    %nav.nav-panel
      = link_to cryptos_path do
        Крипта
      %ul.nav-list.hidden.visible-md
        %li.dropdown
          %a{:href => "#"}
            Парфюмерия
            = fa_icon 'angle-down'
          %ul.drop-menu
            %li
              = link_to parfums_path do
                Духи
            %li
              = link_to parfum_recipes_parfums_path do
                Рецепты
            %li
              = link_to parfum_materials_parfums_path do
                Расходники
      - if current_user.director? || current_user.ceo?
        = link_to users_path do
          Пользователи

  - if current_user.present?
    .user-block
      = link_to user_path(current_user) do
        .user-avatar
          = current_user.avatar
        %div
          = current_user.short_name
          .text-muted.text-small= current_user.user_login_id

      .sign-out-btn
        = link_to logout_sessions_path do
          = fa_icon "sign-out"
.modal.fade.in#parfum-show-recipe-materials-modal{:tabindex => "-1"}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %h5.modal-title
          = title
        %button.btn-without-background.small-button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
          = fa_icon :times
      .modal-body
        %div
          .block-item-info-body
            %div
              - parfum_recipe.parfum_materials_for_recipe.each do |pmfr|
                - if pmfr.material.liquid_material?
                  .text-muted= "#{pmfr.material.material_name}: #{pmfr.spent_material_ml} мл."
                - else
                  .text-muted= "#{pmfr.material.material_name}: #{pmfr.spent_material_count} шт."
      .modal-footer 
        %button.pull-right{ "data-bs-dismiss" => "modal", class: 'save-btn default-btn' } Закрыть

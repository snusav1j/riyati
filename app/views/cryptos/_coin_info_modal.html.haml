.modal.fade.in#coin-info-modal{:tabindex => "-1"}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %h5.modal-title
          = "Информация о #{symbol}"
        %button.btn-without-background.small-button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
          = fa_icon :times
      .modal-body
        .selected-coin-info
          = link_to get_coin_website_by_extracted_data(coin_info), target: "_blank" do
            .selected-coin-picture
              = get_image_url_by_extracted_data(coin_info)
          .selected-coin-desc
            .selected-coin-name
              %div
                .text-bold.text-xxl= get_coin_name_by_extracted_data(coin_info)
                .text-xl.text-muted= symbol
            .selected-coin-desc
              = get_description_by_extracted_data(coin_info).present? ? get_description_by_extracted_data(coin_info) : 'Нет описания.'
            .selected-coin-price
              .selected-coin-price-content
                .text-bold.text-xxl= "Цена: #{coin_price(symbol)}"
                %button.add-coin.form-button.small-button{ data: { symbol: symbol } }
                  .btn= fa_icon :plus
                  .loader{ style: "display: none;" }= fa_icon "circle-o-notch spin"

.card-block.card-item.clickable.parfum-recipe-item{ data: { parfum_recipe_id: pr.id } }
  .card-icon
    .card-id.text-small.text-muted= "##{pr.id}"
    = material_icon.shape(:receipt_long).outlined
    
  .card-block-info
    .card-block-info-1
      .parfum-recipe-name.card-name.text-big.tooltip-m{ title: "Рецепт ##{pr.id}" }
        .break-text= "Рецепт ##{pr.id}"
      .text-muted.tooltip-m{ title: "Примерные затраты" }= "~ #{pr.get_recipe_expense} ₽"

    .card-block-info-2.show-materials{ data: { parfum_recipe_id: pr.id } }
      .text-muted.text-small= "Расходников: #{pr.parfum_materials_for_recipe.length}"
    .delete-parfum-recipe-btn.delete-btn.text-danger.card-btm-right{ data: { parfum_recipe_id: pr.id } }
      = fa_icon :trash


- show_item_style = @show_id.present? && @show_id == p.id ? show_style : ''
.group-for-block{ data: { parfum_id: p.id } }
  .parfum-item.block-item{ style: show_item_style, data: { parfum_id: p.id } }
    .parfum-recipe-info
      %div= p.parfum_name
      -# %div.text-muted= "#{pr.ml} мл." if pr.ml.present?
    
    .block-controls
      .parfum-expense
        .text-muted= "~ #{p.recipe.get_recipe_expense} ₽" if p.recipe.present?
      .delete-parfum-btn.delete-btn{ data: { parfum_id: p.id } }
        = fa_icon :trash
  
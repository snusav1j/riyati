#dop-control-panel
  Расходники
  .dop-info-controls
    %span.text-muted.one-drop-info{ data: { one_drop: one_drop_ml } }
      = one_drop_ml_title
    #new-parfum-material-modal.form-button.small-button
      = fa_icon :plus
.content
  .row 
    .col-md-8
      .parfum-material-block.block
        - @parfum_materials.each do |pm|
          = render partial: "parfum_material_item", locals: { pm: pm }
    .col-md-4
      .row
        .col-md-12
          .extra-info-block
      .row
        .col-md-12
          = render partial: '/charts/donut_chart', locals: { chart_data: ParfumMaterial.group(:material_name) }
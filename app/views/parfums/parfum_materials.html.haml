#dop-control-panel
  Расходники
  .dop-info-controls
    %span.text-muted.one-drop-info{ data: { one_drop: one_drop_ml } }
      = one_drop_ml_title
    = link_to parfum_materials_parfums_path do
      #refresh-data.form-button.small-button
        = fa_icon :refresh
    #new-parfum-material-modal.form-button.small-button
      = fa_icon :plus
.content
  .row 
    .col-md-1
    .col-md-8
      .parfum-material-block.block
        - @parfum_materials.each do |pm|
          = render partial: "parfum_material_item", locals: { pm: pm }
    - if ParfumMaterial.all.present?
      .col-md-2.hide-on-mobile
        .row
          .col-md-12
            .extra-info-block.text-center
              = "Расходников на сумму: #{total_materials_expense} ₽"
      .col-md-1.hide-on-mobile
